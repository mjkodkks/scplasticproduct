---
import Link from "@components/ui/link.astro";
import { Image } from "astro:assets";
import Image1 from "@assets/project/pal_ ring_media.jpg";
import Image2 from "@assets/project/tube_settler.jpg";
import Image3 from "@assets/project/cross_flow_media_fin_filter.jpg";
import Button from "@components/ui/button.astro";
const wording1 = `ตัวอย่างผลงาน ที่ลูกค้าไว้วางใจบริการ S.C. PLASTIC PRODUCTS`;
const wording2 = `เราคือผู้ผลิตและจำหน่ายพลาสติกมีเดียที่มีคุณภาพ ผลิตและจำหน่ายสินค้าประเภทตัวกลางพลาสติก 
ที่ใช้งานสำหรับในระบบบำบัดน้ำเสีย, ระบบบำบัดอากาศ, ระบบผลิตน้ำดี และ ดักไอน้ำ รวมทั้งรับขึ้นรูปพลาสติกบรรจุภัณฑ์/รับทำแม่พิมพ์ขึ้นรูปพลาสติกและให้คำปรึกษาสำหรับผลิตภัณฑ์ด้านสิ่งแวดล้อม`;

const productList = [
  {
    image: Image1,
    title: "Pal Ring Media",
  },
  {
    image: Image2,
    title: "Tube Settler",
  },
  {
    image: Image3,
    title: "Cross Flow Media & Fin Filter",
  },
];
---

<section class="bg-white bg-gradient-to-b from-white to-primary-300 py-12">
  <div class="px-4 mx-auto max-w-screen-xl lg:px-6">
    <div class="text-center mb-8 lg:mb-16">
      <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900">
        {wording1}
      </h2>
    </div>
    <div class="grid lg:grid-cols-3 grid-cols-1 justify-center lg:gap-0 gap-8 lg:rounded-3xl overflow-hidden lg:shadow-lg">
      {
        productList.map((item) => (
          <div class="">
            <Image
              src={item.image}
              alt={item.title}
              class="w-full lg:rounded-none rounded-2xl"
              width={500}
              height={375}
              loading={"lazy"}
            />
          </div>
        ))
      }
    </div>
    <div class="text-center mt-6">
      <Button size="md" style="outline">ดูเพิ่มเติม</Button>
    </div>
  </div>
</section>
